doctype html
html(lang="ko")
  head
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    title #{ pageTitle } | #{ siteName }
  body
    header
      nav 
        a(href="/") go Home
        a(href="/videos/upload") Upload Video
        a(href="/search") Search
        if loggedIn
          a(href="/users/logout") Logout
          span #{ loggedInUser.name }'s profile
        else
          a(href="/join") Join
          a(href="/login") Login
      h1= pageTitle
    main
      if errorMessage
        span= errorMessage
      block content
  include partials/footer.pug
