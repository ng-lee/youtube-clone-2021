extends base
include mixins/video

block content
  .board.profile
    .infos
      if loggedInUser.avatarUrl
        .info
          img(src="/" + loggedInUser.avatarUrl, width="100", height="100")
      .info
        span.info__label Name:
        span.info__content= loggedInUser.name
      .info
        span.info__label Email:
        span.info__content= loggedInUser.email
      .info
        span.info__label Username:
        span.info__content= loggedInUser.username
      .info 
        span.info__label Location:
        span.info__content= loggedInUser.location
    a.link-btn(href="/users/edit") Edit Profile &rarr;

  .videos-board
    if user.videos
      .videos
        each video in user.videos
          +video(video)
    else
      span Sorry nothing found
