extends base

block content
  #videoContainer 
    video(src="/" + video.fileUrl)
    #videoControls
      button#play Play
      button#mute Mute
      input#volume(type="range", step="0.01", value=0.5, min="0", max="1")
      div 
        span#currentTime 00:00
        span /
        span#totalTime 00:00
      div
        input#timeline(type="range", step="0.1", value=0, min="0")
      div
        button#fullScreen Enter Fullscreen
