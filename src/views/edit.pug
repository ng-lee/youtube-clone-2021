extends base.pug

block content
  form.board(method="POST") 
    .infos
      .info
        label.info__label(for="title") Video Title
        input#title.info__input(
          placeholder="Video Title",
          required,
          type="text",
          name="title",
          value=video.title
        )
      .info
        label.info__label(for="description") Description
        input#description.info__input(
          placeholder="Description",
          required,
          type="text",
          name="description",
          value=video.description
        )
      .info
        label.info__label(for="hastags") Hastags
        input#hastags.info__input(
          placeholder="Hastags, separated by commna.",
          required,
          type="text",
          name="hashtags",
          value=video.hashtags.join()
        )
    input.btn(type="submit", value="Save")
