extends base.pug

block content
  form(method="POST") 
    input(
      placeholder="Video Title",
      required,
      type="text",
      name="title",
      value=video.title
    )
    input(
      placeholder="Description",
      required,
      type="text",
      name="description",
      value=video.description
    )
    input(
      placeholder="Hastags, separated by commna.",
      required,
      type="text",
      name="hashtags",
      value=video.hashtags.join()
    )
    input(type="submit", value="Save")
