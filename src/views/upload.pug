extends base.pug

block content
  form.board(method="POST", enctype="multipart/form-data")
    .infos
      .info
        label.info__label(for="video") Video File
        input#video.info__input(
          type="file",
          accept="video/*",
          required,
          name="video"
        )
      .info
        label.info__label(for="title") Video Title
        input#title.info__input(
          placeholder="Title",
          required,
          type="text",
          name="title"
        )
      .info
        label.info__label(for="desc") Description
        input#desc.info__input(
          placeholder="Description",
          required,
          type="text",
          name="description"
        )
      .info 
        label.info__label(for="hastags") Hastags
        input#hastags.info__input(
          placeholder="Hastags, separated by commna.",
          required,
          type="text",
          name="hashtags"
        )
    input.btn(type="submit", value="Upload Video")
