extends base.pug

block content
  form(method="POST", enctype="multipart/form-data")
    .inputs
      div
        label(for="video") Video File
        input#video(type="file", accept="video/*", required, name="video")
      div
        label(for="title") Video Title
        input#title(placeholder="Title", required, type="text", name="title")
      div
        label(for="desc") Description
        input#desc(
          placeholder="Description",
          required,
          type="text",
          name="description"
        )
      div 
        label(for="hastags") Hastags
        input#hastags(
          placeholder="Hastags, separated by commna.",
          required,
          type="text",
          name="hashtags"
        )
    input.btn(type="submit", value="Upload Video")
