extends base.pug

block content
  .upload__container
    .upload__video
      video#preview
      button#actionBtn.social__btn Start Recording
    form(method="POST", enctype="multipart/form-data")
      label(for="video") Video File
      input#video(type="file", accept="video/*", required, name="video")
      label(for="thumb") Thumbnail File
      input#thumb(type="file", accept="image/*", name="thumb")
      input(
        placeholder="Title",
        required,
        type="text",
        name="title",
        maxlength=80
      )
      input(placeholder="Description", type="text", name="description")
      input(
        placeholder="Hashtags, separated by comma.",
        required,
        type="text",
        name="hashtags"
      )
      input(type="submit", value="Upload Video")

block scripts
  script(src="/static/js/recorder.js") 
